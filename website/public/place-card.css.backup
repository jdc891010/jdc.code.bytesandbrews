@media (max-width: 767px) {
  .content-grid {
    grid-template-columns: 1fr;
  }

  .heatmap-container {
    justify-content: flex-start;
    padding-left: 0;
  }

  .day-label {
    width: 4rem;
    min-width: 4rem;
  }

  .radar-chart-container svg {
    max-width: 100%;
    height: auto;
  }

  .weight-list {
    flex-direction: column;
    gap: 0.25rem;
  }
}
